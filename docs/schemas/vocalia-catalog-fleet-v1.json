{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "vocalia-catalog-fleet-v1",
  "title": "VocalIA Fleet Catalog Schema",
  "description": "Schema for vehicle rental fleets (renter persona)",
  "type": "object",
  "required": ["$schema", "tenant_id", "last_sync", "vehicles"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "vocalia-catalog-fleet-v1"
    },
    "tenant_id": {
      "type": "string",
      "minLength": 1,
      "description": "Unique tenant identifier"
    },
    "last_sync": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last synchronization"
    },
    "source": {
      "type": "string",
      "enum": ["custom", "fleet_management", "csv"],
      "description": "Data source"
    },
    "vehicles": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/vehicle"
      }
    },
    "pickup_locations": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/location"
      },
      "description": "Available pickup/dropoff locations"
    }
  },
  "$defs": {
    "vehicle": {
      "type": "object",
      "required": ["id", "type", "brand", "model", "price_per_day", "currency"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique vehicle identifier"
        },
        "type": {
          "type": "string",
          "enum": ["citadine", "berline", "suv", "utilitaire", "luxe", "cabriolet", "monospace", "pick-up"],
          "description": "Vehicle type/category"
        },
        "brand": {
          "type": "string",
          "description": "Vehicle brand"
        },
        "model": {
          "type": "string",
          "description": "Vehicle model"
        },
        "year": {
          "type": "integer",
          "minimum": 2000,
          "description": "Manufacturing year"
        },
        "price_per_day": {
          "type": "number",
          "minimum": 0,
          "description": "Daily rental price"
        },
        "price_per_week": {
          "type": "number",
          "minimum": 0,
          "description": "Weekly rental price (discounted)"
        },
        "currency": {
          "type": "string",
          "enum": ["MAD", "EUR", "USD", "GBP"]
        },
        "fuel": {
          "type": "string",
          "enum": ["essence", "diesel", "hybride", "electrique", "gpl"],
          "description": "Fuel type"
        },
        "transmission": {
          "type": "string",
          "enum": ["manuelle", "automatique"],
          "description": "Transmission type"
        },
        "seats": {
          "type": "integer",
          "minimum": 1,
          "maximum": 15,
          "description": "Number of seats"
        },
        "doors": {
          "type": "integer",
          "minimum": 2,
          "maximum": 5
        },
        "luggage_capacity": {
          "type": "integer",
          "minimum": 0,
          "description": "Luggage capacity (number of bags)"
        },
        "air_conditioning": {
          "type": "boolean",
          "default": true
        },
        "gps": {
          "type": "boolean",
          "default": false
        },
        "available_from": {
          "type": "string",
          "format": "date",
          "description": "Availability start date"
        },
        "available_to": {
          "type": "string",
          "format": "date",
          "description": "Availability end date"
        },
        "pickup_location_ids": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Available pickup locations for this vehicle"
        },
        "mileage_limit": {
          "type": "integer",
          "description": "Daily mileage limit in km (0 = unlimited)"
        },
        "deposit": {
          "type": "number",
          "minimum": 0,
          "description": "Security deposit amount"
        },
        "insurance_included": {
          "type": "boolean",
          "default": true
        },
        "voice_description": {
          "type": "string",
          "description": "Voice-optimized description for TTS"
        },
        "image_url": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "location": {
      "type": "object",
      "required": ["id", "name", "address"],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "description": "Location name (e.g., 'AÃ©roport Casa')"
        },
        "address": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "opening_hours": {
          "type": "string",
          "description": "Opening hours (e.g., '08:00-20:00')"
        },
        "phone": {
          "type": "string"
        }
      }
    }
  }
}
