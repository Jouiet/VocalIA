{
  "name": "vocalia",
  "version": "1.0.0",
  "description": "VocalIA - Voice AI Platform for Europe, MENA & International",
  "author": "VocalIA <contact@vocalia.ma>",
  "license": "PROPRIETARY",
  "main": "core/index.js",
  "scripts": {
    "start:api": "node core/voice-api-resilient.cjs --server",
    "start:db": "node core/db-api.cjs",
    "start:realtime": "node core/grok-voice-realtime.cjs",
    "start:telephony": "node telephony/voice-telephony-bridge.cjs",
    "start:all": "npm run build:css && (npm run start:api & npm run start:db & npm run start:realtime & npm run start:telephony)",
    "build:css": "npx @tailwindcss/cli -i ./website/src/input.css -o ./website/public/css/style.css --minify",
    "watch:css": "npx @tailwindcss/cli -i ./website/src/input.css -o ./website/public/css/style.css --watch",
    "build:server": "node esbuild.config.mjs",
    "build:server:prod": "node esbuild.config.mjs --minify",
    "build:widgets": "node scripts/build-widgets.cjs",
    "build:all": "npm run build:css && npm run build:server:prod && npm run build:widgets",
    "health": "node scripts/health-check.cjs",
    "test": "node --test test/**/*.test.mjs test/**/*.test.cjs test/**/*-test.cjs",
    "test:coverage": "c8 --reporter=text --reporter=html node --test test/**/*.test.mjs test/**/*.test.cjs test/**/*-test.cjs",
    "test:ci": "c8 --reporter=lcov node --test test/**/*.test.mjs test/**/*.test.cjs test/**/*-test.cjs",
    "test:load": "node test/k6/smoke.k6.js",
    "test:e2e": "npx playwright test",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:headed": "npx playwright test --headed",
    "lint": "eslint . --ext .js,.cjs",
    "lint:fix": "eslint . --ext .js,.cjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@hubspot/api-client": "^13.4.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "google-auth-library": "^10.5.0",
    "googleapis": "^144.0.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^8.0.1",
    "papaparse": "^5.5.3",
    "pdfkit": "^0.17.2",
    "resend": "^6.9.2",
    "twilio": "^4.19.0",
    "ws": "^8.14.2"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jouiet/VocalIA.git"
  },
  "keywords": [
    "voice-ai",
    "telephony",
    "grok",
    "twilio",
    "mena",
    "darija",
    "arabic"
  ],
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/cli": "^4.1.18",
    "autoprefixer": "^10.4.23",
    "c8": "^10.1.3",
    "esbuild": "^0.27.3",
    "eslint": "^8.57.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.2.5",
    "tailwindcss": "^4.1.18",
    "terser": "^5.46.0"
  }
}
