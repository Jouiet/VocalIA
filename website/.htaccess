# VocalIA - Apache Configuration for NindoHost cPanel
# Version: 1.0.0 | 29/01/2026

# Enable RewriteEngine
RewriteEngine On

# Force HTTPS (production ready)
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove trailing slash (except for directories)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# Clean URLs - Serve .html files without extension
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Handle /products/voice-widget -> /products/voice-widget.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/$1.html -f
RewriteRule ^(.*)$ /$1.html [L]

# Handle /dashboard -> /dashboard/client.html (default)
RewriteRule ^dashboard/?$ /dashboard/client.html [L]

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header always set X-Frame-Options "DENY"

    # Prevent MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"

    # XSS Protection
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer Policy
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # HSTS - Force HTTPS for 1 year, include subdomains, preload
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # CSP (Content Security Policy) - Session 250.75: Added cdn.jsdelivr.net for Chart.js
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://unpkg.com https://plausible.io https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https://vocalia.ma https://*.vocalia.ma blob:; connect-src 'self' https://ipapi.co https://api.vocalia.ma https://plausible.io; frame-ancestors 'none'"
</IfModule>

# Caching - Static Assets
<IfModule mod_expires.c>
    ExpiresActive On

    # CSS & JS - 1 month
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Images - 1 year
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fonts - 1 year
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"

    # HTML - No cache (always fresh)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css
    AddOutputFilterByType DEFLATE application/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Error Pages
ErrorDocument 404 /404.html
ErrorDocument 500 /404.html

# Block access to sensitive files
<FilesMatch "\.(md|json|cjs|js)$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
</FilesMatch>

# Allow specific JS files in /src/lib/
# Session 250.75: Added api-client, auth-client, charts, data-table, modal, toast
# Session 250.90: Added voice-widget-b2b, voice-widget-ecommerce, intelligent-fallback
<FilesMatch "^(geo-detect|i18n|card-tilt|voice-visualizer|gsap-animations|dashboard-grid|voice-widget|voice-widget-b2b|voice-widget-ecommerce|intelligent-fallback|components|site-init|event-delegation|ab-testing|form-validation|home-page|global-localization|api-client|auth-client|charts|data-table|modal|toast)\.js$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>

# Allow locale JSON files for i18n (5 languages: FR, EN, ES, AR, ARY)
<FilesMatch "^(fr|en|es|ar|ary|voice-fr|voice-en|voice-es|voice-ar|voice-ary)\.json$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>

# Allow PWA manifest
<FilesMatch "^manifest\.json$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>
